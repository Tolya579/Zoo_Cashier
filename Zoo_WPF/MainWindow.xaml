        <Button x:Name="Button_Info_Tick"  Background="Transparent" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,390,0,0" Height="102" Width="348" Click="Button_Info_Tick_Click">
            <Image Source="/О билетах.png" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-2,-5,0,0"/>
        </Button>
        <Button x:Name="Button_Zakaz"  Background="Transparent" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,522,0,0" Height="102" Width="348" Click="Button_Zakaz_Click">
            <Image Source="/Заказ.png" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-2,-5,0,0"/>
        </Button>
        <Button x:Name="Button_Exit"  Background="Transparent" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="545,659,0,0" Height="74" Width="129">
            <Image Source="/Выход.png" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-2,-5,0,0"/>
